{
  "extends": "@repo/typescript-config/react-library.json",
  "include": [
    "**/*.ts",
    "**/*.tsx",
    "next-env.d.ts",
    "next.config.js",
    ".next/types/**/*.ts"
  ],
  "exclude": ["node_modules"],
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"],
      "@/components/*": ["./src/components/*"],
      "@/ui/*": ["./src/components/ui/*"],
      "@/layout/*": ["./src/components/layout/*"],
      "@/icons/*": ["./src/components/icons/*"],
      "@/lib/*": ["./src/lib/*"]
    }
  }
}
