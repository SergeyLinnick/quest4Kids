{
	"$schema": "https://turbo.build/schema.json",
	"ui": "tui",
	"tasks": {
		"build": {
			"dependsOn": ["^build"],
			"env": ["NEXT_PUBLIC_API_URL", "REACT_APP_API_URL", "API_URL", "MARKETING_URL"],
			"inputs": ["$TURBO_DEFAULT$", ".env*", ".env.local"],
			"outputs": [".next/**", "!.next/cache/**"]
		},
		"lint": {
			"dependsOn": ["^lint"]
		},
		"check-types": {
			"dependsOn": ["^check-types"]
		},
		"dev": {
			"cache": false,
			"persistent": true
		}
	},

	"globalEnv": ["NEXT_PUBLIC_API_URL", "REACT_APP_API_URL", "API_URL", "MARKETING_URL"],
	"globalDependencies": [".env"]
}
